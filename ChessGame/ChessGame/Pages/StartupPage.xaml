<Page x:Class="ChessGame.Pages.StartupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChessGame.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="400"
      Title="Chess">

    <StackPanel>
        <Label x:Name="label" Content="Welcome to Chess!" FontSize="40" HorizontalAlignment="Center" Margin="30"/>
        <Button Content="Play Chess" Click="ChessButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" Width="150" Height="50" Margin="15"/>
        <Button Content="Play Chess 960" Click="Chess960Button_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" Width="150" Height="50" Margin="15"/>
        <Button Content="Exit" Click="ExitButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10" Width="150" Height="50" Margin="15"/>
    </StackPanel>
</Page>
